<?php

declare(strict_types=1);

/**
 * @file
 * Provides a recipe entity type.
 */

use Drupal\Core\Render\Element;
use Drupal\user\UserInterface;

/**
 * Implements hook_theme().
 */
function recipe_theme(): array {
  return [
    'recipe' => ['render element' => 'elements'],
  ];
}

/**
 * Prepares variables for recipe templates.
 *
 * Default template: recipe.html.twig.
 *
 * @param array $variables
 *   An associative array containing:
 *   - elements: An associative array containing the recipe information and any
 *     fields attached to the entity.
 *   - attributes: HTML attributes for the containing element.
 */
function template_preprocess_recipe(array &$variables): void {
  $variables['view_mode'] = $variables['elements']['#view_mode'];
  foreach (Element::children($variables['elements']) as $key) {
    $variables['content'][$key] = $variables['elements'][$key];
  }
}

/**
 * Implements hook_user_cancel().
 */
function recipe_user_cancel($edit, UserInterface $account, $method): void {
  switch ($method) {
    case 'user_cancel_block_unpublish':
      // Unpublish recipes.
      $storage = \Drupal::entityTypeManager()->getStorage('recipe');
      $recipe_ids = $storage->getQuery()
        ->condition('uid', $account->id())
        ->condition('status', 1)
        ->accessCheck(FALSE)
        ->execute();
      foreach ($storage->loadMultiple($recipe_ids) as $recipe) {
        $recipe->set('status', FALSE)->save();
      }
      break;

    case 'user_cancel_reassign':
      // Anonymize recipes.
      $storage = \Drupal::entityTypeManager()->getStorage('recipe');
      $recipe_ids = $storage->getQuery()
        ->condition('uid', $account->id())
        ->accessCheck(FALSE)
        ->execute();
      foreach ($storage->loadMultiple($recipe_ids) as $recipe) {
        $recipe->setOwnerId(0)->save();
      }
      break;
  }
}

/**
 * Implements hook_ENTITY_TYPE_predelete() for user entities.
 */
function recipe_user_predelete(UserInterface $account): void {
  // Delete recipes that belong to this account.
  $storage = \Drupal::entityTypeManager()->getStorage('recipe');
  $recipe_ids = $storage->getQuery()
    ->condition('uid', $account->id())
    ->accessCheck(FALSE)
    ->execute();
  $storage->delete(
    $storage->loadMultiple($recipe_ids)
  );
  // Delete old revisions.
  $recipe_ids = $storage->getQuery()
    ->allRevisions()
    ->condition('uid', $account->id())
    ->accessCheck(FALSE)
    ->execute();
  foreach (array_keys($recipe_ids) as $revision_id) {
    $storage->deleteRevision($revision_id);
  }
}
